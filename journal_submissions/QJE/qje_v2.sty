% Environments that may not be defined :

\@ifundefined{condition}{\newtheorem{condition}{Condition}}{}
\@ifundefined{assumption}{\newtheorem{assumption}{Assumption}}{}
\@ifundefined{theorem}{\newtheorem{theorem}{Theorem}}{}
\@ifundefined{proposition}{\newtheorem{proposition}{Proposition}}{}
\@ifundefined{definition}{\newtheorem{definition}{Definition}}{}
\@ifundefined{lemma}{\newtheorem{lemma}{Lemma}}{}
\@ifundefined{examples}{\newtheorem{examples}{Examples}}{}
\newtheorem{theoremaux}{Theorem}
\newtheorem{propositionaux}{Theorem}
\newtheorem{lemmaaux}{Theorem}
\newtheorem{myappendix}{Theorem}

% Change figures and tables headings to roman numerals.

\renewcommand{\thefigure}{\Roman{figure}}
\renewcommand{\thetable}{\Roman{table}}


% Setting counters :

\setcounter{myappendix}{0}
\setcounter{propositionaux}{0}
\setcounter{lemmaaux}{0}
\setcounter{theoremaux}{0}

% New Environments :
% Need to be careful with footnotes in these environments since the
% minipage forces them to be inside the page. Hence it is needed to
% use \footnotemark and \footnotetext to separate the foonote.

\renewenvironment{proposition}{ \refstepcounter{theorem}
\begin{flushleft}{\bf Proposition \theproposition } \\ 
\end{flushleft} \begin{flushright}
 \begin{minipage}{6.21in} } {\end{minipage} \end{flushright}
\stepcounter{theoremaux} \vspace{.1in} }



\renewenvironment{lemma}{ \refstepcounter{theorem}
\begin{flushleft} {\bf Lemma \thelemma} \\ \end{flushleft}
\begin{flushright}  \begin{minipage}{6.21in} } 
{ \end{minipage} \end{flushright} 
\stepcounter{theoremaux} \vspace{.1in} }


\newenvironment{optionlemma}[1]{ \refstepcounter{theorem}
\begin{flushleft} {\bf Lemma \thelemma \hspace{1em} (#1)} \\ \end{flushleft}
\begin{flushright}  \begin{minipage}{6.21in} } 
{ \end{minipage} \end{flushright} \stepcounter{theoremaux} \vspace{.1in} }


\renewenvironment{definition}{
\refstepcounter{theorem}
\begin{flushleft} {\bf Definition \thedefinition} \\ \end{flushleft}
\begin{flushright}  \begin{minipage}{6.21in} } 
{ \end{minipage} \end{flushright}  \vspace{.1in} }

\renewenvironment{theorem}{
\refstepcounter{theorem}
\begin{flushleft} {\bf Theorem \thetheorem} \\ \end{flushleft}
\begin{flushright}  \begin{minipage}{6.21in} } 
{ \end{minipage} \end{flushright}
\addtocounter{theoremaux}{1} \vspace{.1in}}

\renewenvironment{example}{
\refstepcounter{theorem}
{\noindent \bf Example \theexample}  } {\vspace{.1in}}

\renewenvironment{assumption}{
\refstepcounter{theorem}
\begin{flushleft} {\bf Assumption \theassumption} \\ \end{flushleft}
\begin{flushright}  \begin{minipage}{6.21in} } 
{ \end{minipage} \end{flushright}   \vspace{.1in} }


% Defining the proof commands

\@ifundefined{proof}{\def\proof{\noindent{\underline {Proof.}\\ }}}{}

\@ifundefined{theoremproof}{\def\theoremproof{\noindent{\underline {Proof
        of Theorem \thetheoremaux .} \\ }}}{}

\@ifundefined{propositionproof}{\def\propositionproof{\noindent{
      \underline{Proof of Proposition \thepropositionaux . } \\ }}}{}

\@ifundefined{lemmaproof}{\def\lemmaproof{\noindent{\underline {Proof of
        Lemma \thelemmaaux. }\\ }}}{}

\newcommand{\optionproof}[2]{\noindent \underline{Proof of #1 #2.} \\ }


